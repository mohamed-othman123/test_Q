/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "lib": ["ES2022", "dom"],
    "types": ["google.maps"],
    "paths": {
      "@shared/*": ["src/app/shared/*"],
      "@core/*": ["src/app/core/*"],
      "@auth/*": ["src/app/features/auth/*"],
      "@calendar/*": ["src/app/features/calendar/*"],
      "@clients/*": ["src/app/features/clients/*"],
      "@services/*": ["src/app/features/services/*"],
      "@employees/*": ["src/app/features/employees/*"],
      "@halls/*": ["src/app/features/halls/*"],
      "@events/*": ["src/app/features/events/*"],
      "@paymentmethods/*": ["src/app/features/payment-methods/*"],
      "@banks/*": ["src/app/features/banks/*"],
      "@orders/*": ["src/app/features/orders/*"],
      "@layout/*": ["src/app/layout/*"],
      "@permissions/*": ["src/app/features/permissions/*"],
      "@payment/*": ["src/app/features/payment/*"],
      "@profile/*": ["src/app/features/profile/*"],
      "@suppliers/*": ["src/app/features/suppliers/*"],
      "@purchases/*": ["src/app/features/purchases/*"],
      "@dashboard/*": ["src/app/features/dashboard/*"],
      "@client-website-admin/*": ["src/app/features/client-website/client-website-admin/*"],
      "@client-website-public/*": ["src/app/features/client-website/client-website-public/*"],
      "@priceRequest/*": ["src/app/features/price-request/*"],
      "@organization-info/*": ["src/app/features/organization-info/*"],
      "@purchase-categories/*": ["src/app/features/purchase-categories/*"],
      "@expenses-items/*": ["src/app/features/expenses-items/*"],
      "@discounts/*": ["src/app/features/discounts/*"],
      "@refund-requests/*": ["src/app/features/refund-requests/*"],
      "@inventory/*": ["src/app/features/inventory/*"],
      "@audit-transactions/*": ["src/app/features/audit-transactions/*"],
      "@accounts/*": ["src/app/features/accounts/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "fullTemplateTypeCheck": true,
    "enableIvy": true,
    "aot": true,
    "bundle": true
  }
}
